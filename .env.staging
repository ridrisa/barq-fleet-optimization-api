# BARQ Fleet Management - Staging Environment

NODE_ENV=staging
PORT=3003

# Database
DATABASE_MODE=postgres
DB_HOST=staging-postgres-host
DB_PORT=5432
DB_NAME=barq_logistics_staging
DB_USER=barq_user_staging
DB_PASSWORD=CHANGE_ME_STAGING

# Redis
REDIS_HOST=staging-redis-host
REDIS_PORT=6379

# JWT (Use staging-specific keys)
JWT_SECRET=CHANGE_ME_STAGING_JWT
JWT_REFRESH_SECRET=CHANGE_ME_STAGING_REFRESH
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Sentry
SENTRY_DSN=

# CORS
CORS_ORIGIN=https://staging.barq-fleet.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Frontend
NEXT_PUBLIC_API_URL=https://api-staging.barq-fleet.com
NEXT_PUBLIC_WS_URL=wss://ws-staging.barq-fleet.com
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=
NEXT_PUBLIC_APP_NAME=BARQ Fleet (Staging)
NEXT_PUBLIC_APP_VERSION=1.0.0-staging
NEXT_PUBLIC_ENABLE_DEMO=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_STAGING_GRAFANA
