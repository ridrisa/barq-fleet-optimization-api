# BARQ Fleet Management - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=3003

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_MODE=postgres

# Primary Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barq_logistics
DB_USER=barq_user
DB_PASSWORD=changeme_in_production

# Database Connection Pool Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=barq_logistics
POSTGRES_USER=barq_user
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_POOL_MAX=20
POSTGRES_POOL_MIN=2
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=10000
POSTGRES_SSL=false

# ================================
# DATABASE READ REPLICAS (Optional)
# ================================
# Enable read replicas for high availability and performance
ENABLE_READ_REPLICAS=false

# Replication User Credentials
DB_REPLICATION_USER=replicator
DB_REPLICATION_PASSWORD=replicator_password_change_in_production

# Read Replica Hosts (comma-separated)
# For Docker: use service names from docker-compose.replicas.yml
# For external hosts: use actual hostnames/IPs
POSTGRES_REPLICA_HOSTS=postgres-replica-1,postgres-replica-2
POSTGRES_REPLICA_PORTS=5433,5434

# Replica Connection Pool Settings
POSTGRES_REPLICA_POOL_MAX=10
POSTGRES_REPLICA_POOL_MIN=1

# Replication Monitoring
REPLICATION_CHECK_INTERVAL=30000
REPLICATION_LAG_THRESHOLD=5

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# CVRP OPTIMIZATION SERVICE
# ================================
# Single instance (default)
CVRP_SERVICE_URL=http://localhost:5001

# For cluster setup (use load balancer)
# CVRP_SERVICE_URL=http://cvrp-load-balancer:80

# CVRP Cluster Configuration (Optional)
CVRP_CLUSTER_ENABLED=false
CVRP_CLUSTER_SIZE=1

# Circuit Breaker Configuration
CVRP_CB_MAX_FAILURES=5
CVRP_CB_RESET_TIMEOUT=60000

# Retry Configuration
CVRP_MAX_RETRIES=2
CVRP_RETRY_DELAY=1000

# Health Check Configuration
CVRP_HEALTH_CHECK_INTERVAL=30000

# ================================
# JWT AUTHENTICATION
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# AI/LLM PROVIDERS
# ================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ================================
# ERROR TRACKING
# ================================
SENTRY_DSN=

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=http://localhost:3001

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ================================
# FRONTEND CONFIGURATION
# ================================
NEXT_PUBLIC_API_URL=http://localhost:3003
NEXT_PUBLIC_WS_URL=ws://localhost:8081
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=
NEXT_PUBLIC_APP_NAME=BARQ Fleet Management
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENABLE_DEMO=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ================================
# MONITORING
# ================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
