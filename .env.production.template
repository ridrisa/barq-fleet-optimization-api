# BARQ Fleet Management - Production Environment Template
# CRITICAL: Never commit actual production values to git

NODE_ENV=production
PORT=3003

# Database - Use Cloud SQL or managed PostgreSQL
DATABASE_MODE=postgres
DB_HOST=production-postgres-host
DB_PORT=5432
DB_NAME=barq_logistics_prod
DB_USER=barq_user_prod
DB_PASSWORD=USE_SECRETS_MANAGER

# Redis - Use Cloud Memorystore or managed Redis
REDIS_HOST=production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=USE_SECRETS_MANAGER

# JWT - MUST use strong secrets from secrets manager
JWT_SECRET=USE_SECRETS_MANAGER
JWT_REFRESH_SECRET=USE_SECRETS_MANAGER
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Providers - Use production API keys
OPENAI_API_KEY=USE_SECRETS_MANAGER
ANTHROPIC_API_KEY=USE_SECRETS_MANAGER

# Sentry - For production error tracking
SENTRY_DSN=https://your-production-sentry-dsn

# CORS - Production domain only
CORS_ORIGIN=https://barq-fleet.com

# Rate Limiting - Production values
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Frontend - Production URLs
NEXT_PUBLIC_API_URL=https://api.barq-fleet.com
NEXT_PUBLIC_WS_URL=wss://ws.barq-fleet.com
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=USE_SECRETS_MANAGER
NEXT_PUBLIC_APP_NAME=BARQ Fleet Management
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENABLE_DEMO=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Monitoring - Strong password
GRAFANA_USER=admin
GRAFANA_PASSWORD=USE_SECRETS_MANAGER
