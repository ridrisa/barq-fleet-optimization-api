# BARQ Fleet Management - Development Environment

NODE_ENV=development
PORT=3003

# Database
DATABASE_MODE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barq_logistics_dev
DB_USER=barq_user
DB_PASSWORD=dev_password_123

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT (Use test keys for development)
JWT_SECRET=dev-jwt-secret-not-for-production
JWT_REFRESH_SECRET=dev-refresh-secret-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# AI Providers (use your dev keys)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# No Sentry in development
SENTRY_DSN=

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting (more lenient in dev)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3003
NEXT_PUBLIC_WS_URL=ws://localhost:8081
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=
NEXT_PUBLIC_APP_NAME=BARQ Fleet (Dev)
NEXT_PUBLIC_APP_VERSION=1.0.0-dev
NEXT_PUBLIC_ENABLE_DEMO=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
