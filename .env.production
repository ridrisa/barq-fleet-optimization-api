# Production Environment Configuration
# BARQ Logistics System

# Application
NODE_ENV=production
APP_VERSION=1.0.0
APP_NAME=BARQ Logistics
LOG_LEVEL=info

# Ports
PORT=3002
FRONTEND_PORT=3000
WS_PORT=8081

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=barq_logistics
DB_USER=barq_prod_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0
REDIS_KEY_PREFIX=barq:

# JWT Authentication
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys (Replace with actual keys)
GROQ_API_KEY=
OPENAI_API_KEY=
GOOGLE_MAPS_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@barq-logistics.com

# External Services
OSRM_URL=http://osrm:5000
GEOCODING_SERVICE=google

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://barq-logistics.com,https://app.barq-logistics.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Storage
UPLOAD_PATH=/app/uploads
UPLOAD_MAX_SIZE=10485760
LOG_PATH=/app/logs

# Performance
ENABLE_CLUSTERING=true
WORKER_PROCESSES=4
MAX_MEMORY_RESTART=1G

# Security
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/barq-cert.pem
SSL_KEY_PATH=/etc/ssl/private/barq-key.pem
HELMET_ENABLED=true
XSS_PROTECTION=true
CSRF_PROTECTION=true

# Feature Flags
ENABLE_DEMO_MODE=false
ENABLE_API_DOCS=true
ENABLE_METRICS_ENDPOINT=true
ENABLE_HEALTH_CHECK=true

# Saudi Arabia Specific
DEFAULT_TIMEZONE=Asia/Riyadh
DEFAULT_LANGUAGE=ar
CURRENCY=SAR
DISTANCE_UNIT=km

# SLA Settings
BARQ_SLA_HOURS=1
BULLET_SLA_HOURS=4
SLA_WARNING_THRESHOLD=0.75

# Delivery Zones
DEFAULT_CITY=Riyadh
SERVICE_AREAS=Riyadh,Jeddah,Dammam,Mecca,Medina

# Notifications
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# API Documentation
API_DOCS_PATH=/api/docs
API_DOCS_USERNAME=api_docs_user
API_DOCS_PASSWORD=CHANGE_THIS_API_DOCS_PASSWORD