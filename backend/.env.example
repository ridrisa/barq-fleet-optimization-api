# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3003

# Database Configuration
DATABASE_MODE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barq_logistics
DB_USER=barq_user
DB_PASSWORD=changeme

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# CVRP Optimization Service (NEW - Last-Mile Delivery)
CVRP_SERVICE_URL=http://localhost:5001
CVRP_ENABLED=true
CVRP_MIN_DELIVERIES=10
USE_CVRP_FOR_BULLET=true

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Keys
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OSRM Configuration
OSRM_BASE_URL=http://router.project-osrm.org

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Sentry (Optional)
SENTRY_DSN=

# Logging
LOG_LEVEL=info

# Agent System Configuration
DISABLE_AUTONOMOUS_AGENTS=false

# Phase 4 Automation Configuration
AUTO_START_AUTOMATION=false
